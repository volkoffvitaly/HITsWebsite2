<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HITs_Website_2.0</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="module-border-wrap">
    <div class="module">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light pt-4 pb-4">
                <a class="navbar-brand d-flex" href="#">
                    <img class="mr-xl-3 mr-lg-2 mr-3" src="~/svg/logo.svg">
                    <div class="align-self-center header-logo-name">
                        <p>Высшая<p>
                        <p>IT Школа<p>
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse header-list mt-3 mt-sm-0 ml-3 ml-sm-0" id="navbarSupportedContent">
                    <div class="w-100">
                        <ul class="navbar-nav d-flex align-items-sm-center">
                            <li class="nav-item active header-left-margin text-nowrap mr-xl-4 mr-lg-3">
                                <a class="nav-link" href="#">Профессии</a>
                            </li>
                            <li class="nav-item text-nowrap mr-xl-4 mr-lg-3">
                                <a class="nav-link" href="#">Поступление</a>
                            </li>
                            <li class="nav-item text-nowrap mr-xl-4 mr-lg-3">
                                <a class="nav-link" href="#">Жизнь в Томске</a>
                            </li>
                            <li class="nav-item text-nowrap mr-xl-4 mr-lg-3">
                                <a class="nav-link" href="#">О Высшей IT школе</a>
                            </li>
                            <li class="nav-item text-nowrap mr-xl-4 mr-lg-3">
                                <a class="nav-link" href="#">Контакты</a>
                            </li>
                            <li class="nav-item dropdown ml-lg-auto">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Язык</a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#ru">РУС</a>
                                    <a class="dropdown-item" href="#en">EN</a>
                                    <a class="dropdown-item" href="#cn">CN</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                

            </nav>
        </header>
        <div class="a">
            abcasdasdasdas
            <div class="b">
                abcasdasdasdas
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                This is footer
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
