@using hitsWebsite.Services
@using hitsWebsite.Models.ViewModels
@inject IDataProviderService DataProviderService
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject Microsoft.Extensions.Options.IOptions<Microsoft.AspNetCore.Builder.RequestLocalizationOptions> localizationOptions

@{
    // projectNameOfPage
    ViewData["Title"] = "About";

    // Cultures info
    var culture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();  // Current culture request
    var supportedCultures = localizationOptions.Value.SupportedUICultures;  // Supported cultures in app

    // projectNameOfBlocks
    const string FeaturesName = "FeaturesBlock";
    const string OurPeopleName = "OurPeopleBlock";
    const string AchievementsName = "AchievementsBlock";

    // DB entities
    var features = await DataProviderService.GetFeatures();

    var teachers = await DataProviderService.GetTeachers();
    var graduates = await DataProviderService.GetGraduates();
}

<partial name="_DynamicPageInfo" model="@ViewData["Title"]" />

<div class="row pt-4">

    @*  Left Bar  *@
    <partial name="_LeftNavigationBar" />

    <div id="blocks-container" class="col col-lg-9">

        <div class="row info-block">
            <partial name="_BlockName" model='new _BlockNameViewModel() {
                    CurrentControllerName = ViewData["Title"].ToString(),
                    ProjectBlockName = FeaturesName
                }' />

            @if (features.Count == 0 && !User.IsInRole(ApplicationRoles.Administrators))
            {
                <h6>@localizer["EmptyCards"]</h6>
            }
            else
            {
                @for (int i = 0; i < features.Count(); i++) // List ordered by Name
                {
                    <div class="col-12 mt-3">
                        <div class="box">
                            @if (User.IsInRole(ApplicationRoles.Administrators))
                            {
                                <div class="card-btns-container">
                                    <button class="open-popup btn-edit" rel="feature-edit-@i"></button>
                                    <button class="open-popup btn-delete" rel="feature-delete-@i"></button>
                                </div>
                            }
                            <h4>@features[i].FeatureTranslations.Where(x => x.Language == culture.RequestCulture.UICulture.Name).SingleOrDefault().Name</h4>
                            <p class="pt-3">
                                @features[i].FeatureTranslations.Where(x => x.Language == culture.RequestCulture.UICulture.Name).SingleOrDefault().Description
                            </p>
                        </div>
                    </div>
                    @if (User.IsInRole(ApplicationRoles.Administrators))
                    {
                        var idEdit = $"feature-edit-{i}";
                        var idDelete = $"feature-delete-{i}";

                        <partial name="_PopupOpen" model="@idEdit" />
                        <form asp-action="EditFeature" asp-route-id="@features[i].Id">
                            <h4>@localizer["EditAction"]</h4>
                            @for (var j = 0; j < supportedCultures.Count; j++)
                            {
                                <h5>@supportedCultures[j].Name</h5>

                                <input class="entry-field" type="text" name="@("Name[" + j + "]")"
                                       value="@features[i].FeatureTranslations.Where(x => x.Language == supportedCultures[j].Name).SingleOrDefault().Name"
                                       placeholder="@localizer["InputName"]" autocomplete="off" required />

                                // textarea shouldn't has any extra spaces between openning and closing tags
                                <textarea class="entry-field mt-3" type="text" name="@("Description[" + j + "]")" placeholder="@localizer["InputDescription"]" autocomplete="off"
                                          required>@features[i].FeatureTranslations.Where(x => x.Language == supportedCultures[j].Name).SingleOrDefault().Description</textarea>
                                <hr>

                                <input type="hidden" name="@("Language[" + j + "]")" value="@supportedCultures[j].Name" required />
                            }
                            <div class="mt-3 d-flex justify-content-end">
                                <button type="button" class="close-popup btn btn-outline-danger mr-2">@localizer["ButtonCancel"]</button>
                                <button type="submit" class="btn btn-outline-primary">@localizer["ButtonSave"]</button>
                            </div>
                        </form>
                        <partial name="_PopupClose" />

                        <partial name="_PopupOpen" model="@idDelete" />
                        <form asp-action="DeleteFeature" asp-route-id="@features[i].Id">
                            <h4>@localizer["DeleteAction"]</h4>

                            @for (var j = 0; j < supportedCultures.Count; j++)
                            {
                                <h5>@supportedCultures[j].Name</h5>
                                <div>
                                    @localizer["InputName"]: @features[i].FeatureTranslations.Where(x => x.Language == supportedCultures[j].Name).SingleOrDefault().Name <br>
                                    @localizer["InputDescription"]: @features[i].FeatureTranslations.Where(x => x.Language == supportedCultures[j].Name).SingleOrDefault().Description
                                </div>
                                <hr>
                            }
                            <div class="mt-3 d-flex justify-content-end">
                                <button type="button" class="close-popup btn btn-outline-danger mr-2">@localizer["ButtonCancel"]</button>
                                <button type="submit" class="btn btn-outline-primary">@localizer["ButtonSave"]</button>
                            </div>
                        </form>
                        <partial name="_PopupClose" />
                    }
                }
            }

            @if (User.IsInRole(ApplicationRoles.Administrators))
            {
                <div class="col-12 mt-4 card-container">
                    <div class="card box adding-card">
                        <input type="button" class="open-popup add-btn" rel="add-feature" />
                    </div>
                </div>
                <partial name="_PopupOpen" model='"add-feature"' />
                <form asp-action="CreateFeature" method="post">
                    @for (var i = 0; i < supportedCultures.Count; i++)
                    {
                        <h5>@supportedCultures[i].Name</h5>
                        <input class="entry-field" type="text" name="@("Name[" + i + "]")" value="" placeholder="@localizer["InputName"]" autocomplete="off" required />
                        <textarea class="entry-field mt-3" type="text" name="@("Description[" + i + "]")" value="" placeholder="@localizer["InputDescription"]" autocomplete="off" required></textarea>
                        <input type="hidden" name="@("Language[" + i + "]")" value="@supportedCultures[i].Name" required />
                    }
                    <div class="mt-3 d-flex justify-content-end">
                        <button type="button" class="close-popup btn btn-outline-danger mr-2">@localizer["ButtonCancel"]</button>
                        <button type="submit" class="btn btn-primary">@localizer["ButtonSave"]</button>
                    </div>
                </form>
                <partial name="_PopupClose" />
            }

        </div>

        <div class="row info-block mt-5">
            <partial name="_BlockName" model='new _BlockNameViewModel() {
                    CurrentControllerName = ViewData["Title"].ToString(),
                    ProjectBlockName = OurPeopleName
                }' />

            <div class="col-12 mt-3" id="our-people">

                <input type="radio" name="our-people" id="students-btn" checked><label for="students-btn">Студенты</label>

                <input type="radio" name="our-people" id="teachers-btn"><label for="teachers-btn">Преподаватели</label>

                <input type="radio" name="our-people" id="graduates-btn"><label for="graduates-btn">Выпускники</label>

                <div class="clearfix"></div>

                <div class="box mt-3">

                    <div id="students-geographic">
                        <h4 class="mt-2">География студентов</h4>
                        <img class="mt-4" src="~/svg/map-students.svg">
                    </div>

                    <div id="teachers">
                        <partial name="_HumanList" model='new _HumanListViewModel() { Humans = teachers, Post = "teacher" }'>

                            <p class="mt-4">
                                Со всей командой наших преподавателей вы можете ознакомиться
                                <a href="http://hits.tsu.ru/ru/teachers">здесь</a>
                            </p>
                    </div>

                    <div id="graduates">
                        <partial name="_HumanList" model='new _HumanListViewModel() { Humans = graduates, Post = "graduate" }'>

                            <p class="mt-4">
                                Со всей командой наших преподавателей вы можете ознакомиться
                                <a href="http://hits.tsu.ru/ru/teachers">здесь</a>
                            </p>
                    </div>

                </div>
            </div>

        </div>

        <div class="row info-block mt-5" id="achievements">

            <partial name="_BlockName" model='new _BlockNameViewModel() {
                    CurrentControllerName = ViewData["Title"].ToString(),
                    ProjectBlockName = AchievementsName
                }' />

            <div class="col-12 mt-3">
                <div class="box">
                    @if (User.IsInRole(ApplicationRoles.Administrators))
                    {
                        <div class="card-btns-container">
                            <button class="open-popup btn-edit" rel="achievements-edit"></button>
                        </div>

                        <partial name="_PopupOpen" model='"achievements-edit"' />
                        <form>
                            <h4>@localizer["EditAction"]</h4>
                            @for (var j = 0; j < supportedCultures.Count; j++)
                            {
                                <h5>@supportedCultures[j].Name</h5>

                                <input class="entry-field" type="text" name="@("Name[" + j + "]")"
                                       value=",flffskfjkdsfsdfsdfsdfsdf"
                                       placeholder="@localizer["InputName"]" autocomplete="off" required />

                                // textarea shouldn't has any extra spaces between openning and closing tags
                                <textarea class="entry-field mt-3" type="text" name="@("Description[" + j + "]")" placeholder="@localizer["InputDescription"]" autocomplete="off"
                                          required>fjdsfjdsjfksdfd</textarea>
                                <hr>

                                <input type="hidden" name="@("Language[" + j + "]")" value="@supportedCultures[j].Name" required />
                            }
                            <div class="mt-3 d-flex justify-content-end">
                                <button type="button" class="close-popup btn btn-outline-danger mr-2">@localizer["ButtonCancel"]</button>
                                <button type="submit" class="btn btn-outline-primary">@localizer["ButtonSave"]</button>
                            </div>
                        </form>
                        <partial name="_PopupClose" />
                    }
                    <div class="row justify-content-around">

                        <div class="col-7">
                            <text>
                                Мы гордимся нашими студентами, среди их достижений первые и вторые места во всевозможных чемпионатах и хакатонах.
                                <br>С полным списком достижений вы можете ознакомиться <a href="#">здесь</a>
                            </text>
                        </div>

                        <div class="col-5">
                            <div class="row">
                                <div class="col-6 mt-0 company-container"><img src="/img/achievements/worldskills_logo.jpg" alt="worldskills" /></div>
                                <div class="col-6 mt-0 company-container"><img src="/img/achievements/yandex_logo.png" alt="worldskills" /></div>
                                <div class="col-6 mt-4 company-container"><img src="/img/achievements/digital_logo.png" alt="worldskills" /></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </div>
</div>
